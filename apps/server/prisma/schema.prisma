generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum AdminRole {
  OWNER
  STAFF
}

enum OrderStatus {
  ORDERED
  SETTLED
  CANCELLED
}

enum DiningSessionStatus {
  ACTIVE
  CLOSED
}

enum PrinterProvider {
  USB_AGENT
}

enum PrintJobType {
  KITCHEN_TICKET
  BILL_TICKET
  RECEIPT_TICKET
}

enum PrintJobStatus {
  PENDING
  PICKED
  SENT
  FAILED
}

model store {
  id        String   @id @default(cuid())
  name      String
  address   String?
  businessHours String?
  phone     String?
  spiceOptions Json @default("[]")
  autoPrintReceiptOnSettle Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  adminUsers admin_user[]
  tables     table[]
  categories category[]
  products   product[]
  orders     order[]
  sessions   dining_session[]
  feedbacks  feedback[]
  tableMoveLogs table_move_log[]
  printers printer[]
  printJobs print_job[]
}

model admin_user {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         AdminRole   @default(OWNER)
  isActive     Boolean  @default(true)
  storeId      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  store store @relation(fields: [storeId], references: [id], onDelete: Cascade)
  tableMoveLogs table_move_log[]
  printJobs print_job[]
}

model table {
  id        String   @id @default(cuid())
  name      String
  isActive  Boolean  @default(true)
  isDeleted Boolean  @default(false)
  currentSessionId String?
  storeId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store  store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
  orders order[]
  feedbacks feedback[]
  sessions dining_session[]

  @@unique([storeId, name])
}

model category {
  id        String   @id @default(cuid())
  name      String
  sort      Int      @default(0)
  storeId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store    store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  products product[]

  @@unique([storeId, name])
}

model product {
  id        String   @id @default(cuid())
  name      String
  price     Int
  unit      String   @default("")
  imageUrl  String?
  isOnSale  Boolean  @default(true)
  isSoldOut Boolean  @default(false)
  sort      Int      @default(0)
  storeId   String
  categoryId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store    store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  category category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  orderItems order_item[]
  cartItems cart_item[]

  @@index([storeId, categoryId])
}

model order {
  id         String      @id @default(cuid())
  status     OrderStatus @default(ORDERED)
  spiceKey   String?
  spiceLabelSnapshot String?
  remark     String?
  amount     Int
  storeId    String
  tableId    String
  sessionId  String?
  dinersCount Int       @default(1)
  settledAt DateTime?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  store store @relation(fields: [storeId], references: [id], onDelete: Cascade)
  table table @relation(fields: [tableId], references: [id], onDelete: Cascade)
  session dining_session? @relation(fields: [sessionId], references: [id], onDelete: Restrict)
  items order_item[]

  @@index([storeId, tableId, createdAt])
  @@index([sessionId, createdAt])
}

model order_item {
  id            String @id @default(cuid())
  orderId       String
  productId     String
  nameSnapshot  String
  priceSnapshot Int
  unitSnapshot  String @default("")
  qty           Int

  order   order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
}

model dining_session {
  id          String              @id @default(cuid())
  storeId     String
  tableId     String
  status      DiningSessionStatus @default(ACTIVE)
  dinersCount Int
  isDeleted   Boolean             @default(false)
  cartVersion Int                @default(0)
  createdAt   DateTime            @default(now())
  closedAt    DateTime?

  store  store  @relation(fields: [storeId], references: [id], onDelete: Cascade)
  table  table  @relation(fields: [tableId], references: [id], onDelete: Cascade)
  orders order[]
  cartItems cart_item[]
  printJobs print_job[]

  @@index([storeId, tableId, status, createdAt])
}

model table_move_log {
  id          String   @id @default(cuid())
  storeId     String
  sessionId   String
  fromTableId String
  toTableId   String
  operator    String
  adminUserId String
  createdAt   DateTime @default(now())

  store store @relation(fields: [storeId], references: [id], onDelete: Cascade)
  admin admin_user @relation(fields: [adminUserId], references: [id], onDelete: Restrict)

  @@index([storeId, createdAt])
  @@index([sessionId, createdAt])
}

model cart_item {
  id              String   @id @default(cuid())
  sessionId       String
  productId       String
  nameSnapshot    String
  priceSnapshot   Int
  imageUrlSnapshot String?
  qty             Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  session dining_session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  product product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@unique([sessionId, productId])
  @@index([sessionId])
}

model mp_user {
  id        String   @id @default(cuid())
  openid    String   @unique
  nickname  String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  feedbacks feedback[]
}

enum FeedbackType {
  DISH
  SERVICE
  ENV
  OTHER
}

model feedback {
  id        String       @id @default(cuid())
  storeId   String
  tableId   String?
  contact   String?
  type      FeedbackType
  content   String
  images    Json?
  mpUserId  String?
  createdAt DateTime     @default(now())

  store  store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
  table  table?  @relation(fields: [tableId], references: [id], onDelete: SetNull)
  mpUser mp_user? @relation(fields: [mpUserId], references: [id], onDelete: SetNull)

  @@index([storeId, createdAt])
  @@index([tableId, createdAt])
  @@index([mpUserId, createdAt])
}

model printer {
  id        String   @id @default(cuid())
  storeId   String
  name      String
  isActive  Boolean  @default(true)
  provider  PrinterProvider
  agentKey  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store store @relation(fields: [storeId], references: [id], onDelete: Cascade)
  printJobs print_job[]

  @@index([storeId, isActive])
}

model print_job {
  id                 String       @id @default(cuid())
  storeId            String
  printerId          String
  type               PrintJobType
  sessionId          String
  orderId            String?
  status             PrintJobStatus @default(PENDING)
  content            String
  errorMessage       String?
  operatorAdminUserId String?
  idempotencyKey     String?      @unique
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  store   store      @relation(fields: [storeId], references: [id], onDelete: Cascade)
  printer printer    @relation(fields: [printerId], references: [id], onDelete: Cascade)
  session dining_session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  operator admin_user? @relation(fields: [operatorAdminUserId], references: [id], onDelete: SetNull)

  @@index([storeId, createdAt])
  @@index([sessionId, createdAt])
  @@index([status, createdAt])
}
